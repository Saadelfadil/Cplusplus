NAME=scavtrap

SRC = ClapTrap.cpp ScavTrap.cpp main.cpp 

all: $(NAME)

$(NAME) : $(SRC)
	clang++ -Wall -Wextra -Werror $(SRC) -o $(NAME)
clean : 
	@rm -rf $(NAME)
fclean: clean

re : fclean all